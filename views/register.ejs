<% include partials/header.ejs %>
<script src="/register.js"></script>
<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" />

<script>
  $( function() {
    $( "#datepicker" ).datepicker({
        changeYear: true,
        yearRange: "c-50:c+0"
    });    
  } );
</script>

     <div class="container"> 
        <div style="height: 100vh;">
            <div style="padding-top: 15vh;">  
                <div class="row">
                    <div class="col s12 m6 offset-m3">
                        <div class="card" style="height: 550px;">
                            <div class="card-content">
                                <% if(userTaken){ %>
                                    <span class="card-title center-align">Select a new username</span>
                                <% } else { %>
                                    <span class="card-title center-align">Register</span>
                                <% } %>
                                <form class="col s12 m8 offset-m2" action="/register" method="POST">
                                    <div class="row">
                                        <div class="input-field col s6">
                                            <input name="username" id="username" type="text" class="validate" required="true">
                                            <label for="username">Username</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <input name="password" id="password" type="password" class="validate" required="true">
                                            <label for="password">Password</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <input name="name" id="name" type="text" class="validate" required="true">
                                            <label for="name">Full name</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <input name="email" id="email" type="text" class="validate" required="true">
                                            <label for="email">E-Mail</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s6">
                                            <select name="gender">
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>
                                            <label>Gender</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <label for="birthday" class="active">Birthdate</label>
                                            <input type="text" pattern="\d{1,2}/\d{1,2}/\d{4}" name="birthday" placeholder="MM/DD/YYYY" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <button class="waves-effect waves-light btn">Register</button>
                                        </div>
                                    </div>
                                </form>    
                            </div>                        
                        </div>             
                    </div>
                           
                </div>
            </div>  
        </div>
     </div> 

<% include partials/footer.ejs %>